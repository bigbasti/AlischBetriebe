@model AlischBetriebe.Web.Domain.Site.SiteHeader
@{
    ViewBag.Title = "Neuen Header anlegen";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@section HeadContent{
    @Scripts.Render("~/bundles/jqueryval")
}
<h2>Neue Seite anlegen</h2>
<p>Bitte füllen Sie alle Felder aus und klicken Sie anschließend unten auf "Seite erstellen"</p>

@using (Html.BeginForm("createheader", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <div class="row-fluid">
        <div class="span12">
            @Html.LabelFor(m => m.Name)
        </div>
    </div>
    <div class="row-fluid">
        <div class="span6">
            @Html.TextBoxFor(m => m.Name)
        </div>
        <div class="span6">
            @Html.ValidationMessageFor(m => m.Name)
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            Bitte Grafik auswählen
        </div>
    </div>
    <div class="row-fluid">
        <div class="span6">
            <input id="FileName" name="FileName" type="file" class="btn btn-small" />
        </div>
        <div class="span6">
            @Html.ValidationMessageFor(m => m.FileName)
        </div>
    </div>
    
    <p>
        <div class="alert">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Wichtig!</strong> Die Grafik sollte die Ausmaße von 1000 x 200 Pixeln haben um eine gute Darstellung zu erhalten!
        </div>
    </p>
    
    <input type="submit" value="Seite erstellen" class="btn btn-primary btn-small" />
}