@using AlischBetriebe.Web.Domain.Site
@model IQueryable<AlischBetriebe.Web.Domain.Site.SiteHeader>
@{
    ViewBag.Title = "Seitetitel";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Übersicht erstellter Seitentitel</h2>
<p>Ein Seitentitel ist eine Grafik die ganz oben auf der Seite angezeigt wird. Hier können Sie neue Grafiken dafür hochladen.</p>

<table class="table-striped">
    <thead>
        <th>Name</th>
        <th>Vorschau</th>
        <th>Aktion</th>
    </thead>
    <tbody>
        @foreach(SiteHeader header in Model)
        {
            <tr>
                <td>@header.Name</td>
                <td><img src="@Url.Content("~/Content/uploads/header/" + header.FileName)" width="200"/></td>
                <td>@if(header.HeaderId != 1)
                    {
                        @Html.ActionLink("Löschen", "deleteheader", "admin", new {id = header.HeaderId}, new {@class = "btn btn-danger btn-small"})
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="row-fluid">
    <div class="span12">
        @Html.ActionLink("Einen neuen Seitentitel erstellen", "createheader", "admin", new {@class="btn btn-small"})
    </div>
</div>